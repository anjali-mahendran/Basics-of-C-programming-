#include<stdio.h>
int main()
{
    int n,row,col;
    scanf("%d",&n);
    n=(n*2)-1;
    for(row=1;row<=n;row++)
    {
        for(col=1;col<=n;col++)
        {
           if(row==col || row+col==n+1 || row==1 || row==n || col==1 || col==n)
              printf("*");
            else
              printf(" ");
        }
        printf("\n");
    }
}
